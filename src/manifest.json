{
    "name": "EMSCharts Filler",
    "short_name": "Chartfiller",
    "version": "0.1.3.0",
    "version_name": "0.1.3 beta",
    "description": "Autofills EMSCharts with defaults.",
    "manifest_version" : 2,
    "background": {
        "persistent": false,
        "scripts": ["bg.js"]
    },
    "icons" : {
        "16" : "icon_16.png",
        "128" : "icon_128.png"
    },
    "options_page":"options.html",
    "permissions": [
    "https://*.emscharts.com/pr/", 
    "storage"
    ],
    "web_accessible_resources":["inject.js"],
    "content_scripts": [
	{
            "matches":[
		"https://www.emscharts.com/specrep/create.cfm*",
		"https://www.emscharts.com/pr/page*.cfm*"
	    ],
            "js":["jquery-1.8.3.min.js","specrep.js"],
            "run_at":"document_start"
	}
    ],
    "browser_action": {
        "default_title": "EMSCharts Filler",
        "default_popup": "popup.html"
    }
}
